<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>注册</title>
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
<script type="text/javascript" src="/javascripts/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/ddaccordion.js"></script>


<script type="text/javascript" src="/javascripts/jconfirmaction.jquery.js"></script>
<script type="text/javascript">
	
	$(document).ready(function() {
		$('.ask').jConfirmAction();
	});
	
</script>

<script language="javascript" type="text/javascript" src="/javascripts/niceforms.js"></script>
<link rel="stylesheet" type="text/css" media="all" href="/stylesheets/niceforms-default.css" />

</head>
<body>
<div id="main_container">

	<div class="header_login">
    <div class="logo">用户后台注册<a href="#"></a></div>
    
    </div>

     
         <div class="login_form">
         
         <h3>注册</h3>
         
         <a href="#" class="forgot_pass">忘记密码</a> 
         
         <form action="" method="post" class="niceform">
         
                <fieldset>
                    <dl>
                        <dt><label for="email">用户名:</label></dt>
                        <dd><input type="text" name="" id="username" size="54" /></dd>
                    </dl>
                    <dl>
                        <dt><label for="password">密码:</label></dt>
                        <dd><input type="text" name="" id="password" size="54" /></dd>
                    </dl>
                    
                    <dl>
                        <dt><label></label></dt>
                        <dd>
                    <input type="checkbox" name="interests[]" id="" value="" /><label class="check_label">记住账号</label>
                        </dd>
                    </dl>
                    
                     <dl class="submit">
                    <input type="button" name="button" id="register" value="注册" />
                     </dl>
                    
                </fieldset>
                
         </form>
         </div>  
   
</div>		
</body>
<script type="text/javascript">
	$(function(){
	$('#register').click(function(){
		$.ajax( {
			type:'post',
			url:'/users/register',
			data:{username:$('#username').val(),password:$('#password').val()},
			success:function(data){
				console.log(data)
				if(data==1){
					alert('注册成功,成功跳转');
					location.href='/login'
				}else{
					alert('注册失败');
					location.href='/register'
				}
			}
				})
			})
		})
</script>
</html>